{
  "name": "SMS2MQTT",
  "version": "1.0.0",
  "slug": "sms2mqtt",
  "description": "Forward SMS from an Android device to a Home Assistant instance via MQTT.",
  "arch": [
    "amd64",
    "armhf",
    "armv7",
    "aarch64"
  ],
  "init": false,
  "uart": true,
  "startup": "application",
  "boot": "auto",
  "options": {
    "mqtt_broker": "192.168.1.91",
    "mqtt_username": "mqtt",
    "mqtt_password": "your_password"
  },
  "schema": {
    "mqtt_broker": "str",
    "mqtt_username": "str",
    "mqtt_password": "str",
    "log_level": "list(trace|debug|info|notice|warning|error|fatal)?",
    "devices": [
      {
        "path": "str",
        "baudrate": "int"
      }
    ]
  },
  "homeassistant_api": true,
  "map": [
    "addon_config:rw"
  ],
  "ports": {},
  "image": "domochip/sms2mqtt"
}

